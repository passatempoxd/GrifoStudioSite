:root {
    --cor-primaria: #F0A500;
    --cor-secundaria: #FFA03F;
    --cor-fundo: #FEFEFE;
    --cor-fundo-secundaria: #F3F3F3;
    --cor-texto: #1E1E1E;
    --cor-texto-claro: rgba(0, 0, 0, 0.75);
    --cor-fundo-footer: #000000;
    
    --fonte-titulo: 'Manuale', serif;
    --fonte-corpo: 'Inter', sans-serif;
    --fonte-secundaria: 'Encode Sans', sans-serif;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--fonte-corpo);
    background-color: var(--cor-fundo-secundaria);
    color: var(--cor-texto);
    line-height: 1.6;
}

.container {
    max-width: 1728px;
    margin: 0 auto;
    padding: 0 102px; 
    width: 100%;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

h1, h2, h3, h4 {
    font-family: var(--fonte-titulo);
    font-weight: 700;
}

section {
    padding: 100px 0;
    overflow-x: hidden;
}

section > .container > h2 {
    font-size: clamp(40px, 5vw, 63px);
    font-weight: 800;
    text-transform: uppercase;
    color: var(--cor-texto);
    margin-bottom: 20px;
}

.subtitle {
    font-size: 28px;
    font-weight: 500;
    font-family: var(--fonte-corpo);
    color: var(--cor-secundaria);
    line-height: 1.4;
}

header {
    background-color: var(--cor-fundo);
    width: 100%;
    padding: 30px 0;
    border-bottom: 1px solid #EAEAEA;
    position: relative;
    z-index: 100;
}

.container-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    width: 243px; 
}

header nav {
    flex-grow: 1; 
    margin: 0 40px;
}
header nav ul {
    display: flex;
    list-style: none;
    gap: 40px; 
    justify-content: center; 
}

header nav a {
    text-decoration: none;
    font-family: var(--fonte-secundaria);
    font-size: 28px;
    font-weight: 500;
    color: var(--cor-texto-claro);
    transition: color 0.3s ease, transform 0.2s ease, opacity 0.2s ease;
}

header nav a:hover,
header nav a.active {
    color: var(--cor-texto);
    font-weight: 700;
}

.search-bar {
    display: flex;
    align-items: center;
    background-color: rgba(196, 196, 196, 0.50); 
    border-radius: 20px;
    padding: 5px 15px;
    min-width: 240px; 
}
.search-bar input {
    border: none;
    background: transparent;
    outline: none;
    font-family: var(--fonte-secundaria);
    font-size: 16px;
    color: var(--cor-texto);
    flex-grow: 1; 
}
.search-bar input::placeholder {
    color: var(--cor-texto-claro);
    font-size: 13px; 
}
.search-bar .search-button {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    margin-left: 10px;
    display: flex;
    align-items: center;
}
.search-bar .search-button img {
    width: 26px; 
    height: 26px;
}

.hamburger-menu {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    margin-left: 20px; 
    transition: transform 0.2s ease, opacity 0.2s ease;
}
.hamburger-menu img {
    width: 41px; 
    height: 27px;
}

.hero {
    background-color: var(--cor-fundo);
    padding: 80px 0 120px 0;
}

.container-hero {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
}

.hero-text {
    flex-basis: 50%;
    max-width: 833px; 
}

.hero-text h1 {
    font-size: clamp(48px, 6vw, 96px); 
    line-height: 1.2; 
    color: var(--cor-texto);
}

.hero-text h1 .italic-800 {
    font-family: var(--fonte-titulo);
    font-style: italic;
    font-weight: 800; 
}
.hero-text h1 .italic-600 {
    font-family: var(--fonte-titulo);
    font-style: italic;
    font-weight: 600; 
}

.hero-text .divider {
    width: 630px; 
    height: 7px;
    background-color: var(--cor-secundaria);
    margin: 40px 0;
}

.hero-text p {
    font-family: var(--fonte-secundaria);
    font-size: 24px; 
    color: var(--cor-texto-claro);
    line-height: 32.88px; 
    max-width: 606px; 
}

.hero-image {
    flex-basis: 45%;
    position: relative; 
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--cor-primaria); 
    padding: 20px; 
    border-radius: 5px; 
    min-height: 600px; 
}
.hero-post-image {
    z-index: 3; 
    box-shadow: 0px 10px 30px rgba(0,0,0,0.3);
    max-width: 400px; 
}

.hero-wing {
    position: absolute;
    z-index: 2; 
    width: 200px; 
    top: 50%;
}
.hero-wing.wing-left {
    left: 20px; 
    transform: translateY(-50%);
}
.hero-wing.wing-right {
    right: 20px;
    transform: translateY(-50%) scaleX(-1);
}

.sobre-nos {
    background-color: var(--cor-fundo-secundaria);
}
.container-sobre {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 60px;
}

.sobre-text {
    flex-basis: 55%;
}

.sobre-text h3 {
    font-size: 58px; 
    line-height: 1.3;
    margin-top: 10px;
    margin-bottom: 30px;
}

.sobre-text p {
    font-family: var(--fonte-secundaria);
    font-size: 24px; 
    color: var(--cor-texto-claro);
    line-height: 36px; 
    margin-bottom: 40px;
}

.btn-primary {
    display: inline-block;
    background-color: var(--cor-primaria);
    color: white;
    font-family: var(--fonte-titulo);
    font-size: 40px; 
    font-weight: 800;
    text-decoration: none;
    padding: 20px 60px;
    border-radius: 30px; 
    box-shadow: 0px 8px 40px rgba(0, 0, 0, 0.25); 
    transition: transform 0.3s ease, box-shadow 0.3s ease, opacity 0.2s ease;
}

.btn-primary:hover {
    transform: translateY(-5px);
    box-shadow: 0px 12px 45px rgba(0, 0, 0, 0.3);
}

.sobre-image {
    flex-basis: 45%;
}

.compromissos {
    background-color: var(--cor-fundo);
}
.container-compromissos {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 60px;
}

.compromissos-image {
    flex-basis: 45%;
}

.compromissos-list {
    flex-basis: 55%;
    padding-left: 40px;
}

.compromissos-list h2 {
    font-size: 58px; 
    margin-top: 10px;
}

.compromissos-list ul {
    list-style: none;
    margin-top: 40px;
}

.compromissos-list li {
    display: flex;
    align-items: center;
    gap: 25px;
    margin-bottom: 30px;
}

.icon-box {
    width: 113px; 
    height: 108px; 
    background: white;
    border-radius: 26px; 
    box-shadow: 0px 0px 100px -24px rgba(0, 0, 0, 0.50); 
    display: flex;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
}
.icon-box img {
    width: 60px;
    height: 60px;
    object-fit: contain; 
}

.item-text h4 {
    font-family: var(--fonte-corpo);
    font-size: 28px; 
    font-weight: 500;
    color: var(--cor-texto);
}
.item-text p {
    font-family: var(--fonte-corpo);
    font-size: 18px; 
    color: var(--cor-texto-claro);
}

.projetos {
    background-color: var(--cor-primaria);
    background-size: cover;
    background-position: center;
}
.projetos h2 {
    color: white; 
    text-align: center;
    margin-bottom: 60px;
}

.gallery-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    align-items: center; 
}
.gallery-grid img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 3px;
    border: 5px solid white; 
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25); 
}

.contato {
    background-color: var(--cor-fundo-secundaria); 
    position: relative; 
    overflow: hidden; 
}
.container-contato {
    display: flex;
    justify-content: space-between;
    gap: 60px;
    position: relative; 
    z-index: 2;
}

.contato-bg-block {
    position: absolute;
    z-index: 1;
    left: 0; 
    top: 0;
    height: 100%;
    width: 50%; 
    background-color: rgba(240, 165, 0, 0.20);
}

.contato-info {
    flex-basis: 45%;
    position: relative; 
    z-index: 3;
}
.contato-info h2 {
    font-size: 63px; 
}
.contato-info ul {
    list-style: none;
    margin-top: 40px;
}
.contato-info li {
    display: flex;
    gap: 25px;
    margin-bottom: 30px;
}
.icon-box-contato {
    width: 121px; 
    height: 108px; 
    background: white;
    border-radius: 26px;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25); 
    display: flex;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
}
.icon-box-contato img {
    width: 60px;
    height: 60px;
    object-fit: contain; 
}

.contato-info h4 {
    font-family: var(--fonte-corpo);
    font-size: 28px; 
    font-weight: 500;
}
.contato-info p {
    font-size: 20px; 
    color: var(--cor-texto);
}

.contato-form {
    flex-basis: 55%;
    padding: 40px; 
    background-color: var(--cor-fundo); 
    border-radius: 10px;
    box-shadow: 0px 5px 20px rgba(0,0,0,0.1);
    position: relative; 
    z-index: 3;
}
.form-group {
    margin-bottom: 25px;
}
.form-group label {
    display: block;
    font-size: 24px; 
    font-family: var(--fonte-corpo);
    color: rgba(0, 0, 0, 0.93);
    margin-bottom: 10px;
}
.form-group label span {
    color: red; 
}
.form-group input {
    width: 100%;
    height: 76px; 
    padding: 0 20px;
    border: 1px solid rgba(0, 0, 0, 0.34); 
    border-radius: 10px; 
    font-size: 20px;
    font-family: var(--fonte-corpo);
}
.form-group input::placeholder {
    color: rgba(0, 0, 0, 0.40); 
    font-size: 20px; 
}

.btn-submit {
    width: 301px; 
    height: 86px; 
    background: var(--cor-primaria);
    border: none;
    border-radius: 10px; 
    box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.25); 
    color: white;
    font-size: 40px; 
    font-weight: 700;
    font-family: var(--fonte-corpo);
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease, opacity 0.2s ease, background-color 0.2s ease;
    float: right; 
}
.btn-submit:hover {
    transform: translateY(-5px);
    box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.25);
}
.btn-submit:disabled {
    background-color: #aaa;
    cursor: not-allowed;
}

footer {
    background-color: var(--cor-fundo-footer); 
    color: white;
    padding-top: 80px;
}

.container-footer {
    display: flex;
    justify-content: space-between;
    gap: 40px;
    padding-bottom: 60px;
}

.footer-col {
    flex: 1;
}
.footer-col-1 {
    flex: 2; 
}
.logo-footer {
    width: 243px;
    margin-bottom: 20px;
}
.footer-col-1 p {
    font-family: var(--fonte-secundaria);
    font-size: 17px; 
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.5;
    max-width: 380px; 
}
.social-icons {
    display: flex;
    gap: 15px;
    margin-top: 30px;
}
.social-icons a {
    transition: transform 0.2s ease, opacity 0.2s ease;
}
.social-icons a img {
    width: 44px; 
    height: 44px;
    transition: transform 0.3s ease;
}
.social-icons a:hover img {
    transform: scale(1.1);
}

.footer-col h4 {
    font-family: var(--fonte-corpo);
    font-size: 28px; 
    font-weight: 600;
    margin-bottom: 30px;
}
.footer-col ul {
    list-style: none;
}
.footer-col ul li {
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
}
.footer-col ul a,
.footer-col ul span {
    color: rgba(255, 255, 255, 0.75); 
    text-decoration: none;
    font-size: 18px; 
    font-weight: 600;
    transition: color 0.3s ease;
}

.footer-col ul li img {
    width: 20px;
    height: 20px;
}

.instagram-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
}
.instagram-grid img {
    width: 81px; 
    height: 81px; 
    border-radius: 9px;
    object-fit: cover; 
}

.footer-bottom {
    border-top: 1px solid #333;
    padding: 30px 0;
    text-align: center;
}
.footer-bottom p {
    font-size: 18px; 
    color: white;
}

@media (max-width: 1200px) {
    .container {
        padding: 0 40px;
    }
    
    .container-hero,
    .container-sobre,
    .container-compromissos,
    .container-contato {
        flex-direction: column;
        gap: 40px;
    }

    .hero-text {
        text-align: center;
        order: 2;
    }
    .hero-image {
        order: 1;
        min-height: auto; 
    }
    .hero-text .divider {
        margin: 40px auto;
    }

    .sobre-text {
        text-align: center;
        order: 2;
    }
    .sobre-image {
        order: 1;
    }
    
    .compromissos-image {
        order: 1;
    }
    .compromissos-list {
        order: 2;
        padding-left: 0;
    }

    .contato-bg-block {
        width: 100%; 
        height: 450px; 
    }
    .contato-form {
        padding: 20px;
        margin-top: -100px; 
    }
    .contato-info {
        order: 1;
    }
    .btn-submit {
        float: none;
        width: 100%;
    }

    .gallery-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .container-footer {
        flex-direction: column;
        text-align: center;
    }
    .footer-col-1 p {
        margin: 0 auto 20px auto;
    }
    .social-icons {
        justify-content: center;
    }
    .instagram-grid {
        width: 260px; 
        margin: 0 auto;
    }
    .footer-col ul li {
        justify-content: center;
    }
}

@media (max-width: 768px) {
    .container {
        padding: 0 20px;
    }
    
    header nav {
        display: none; 
    }
    .search-bar {
        display: none; 
    }
    .hamburger-menu { 
        display: block; 
        margin-left: 0; 
    }
    
    section {
        padding: 60px 0;
    }
    
    .hero-text .divider {
        width: 100%;
    }
    .hero-wing {
        display: none;
    }
    .hero-image {
        padding: 0;
        background: none; 
    }
    .hero-post-image {
        max-width: 100%;
    }

    section > .container > h2,
    .contato-info h2 {
        line-height: 1.2;
    }

    .sobre-text h3,
    .compromissos-list h2 {
        font-size: 36px;
    }

    .gallery-grid {
        grid-template-columns: 1fr; 
    }
    
    .icon-box, .icon-box-contato {
        width: 80px;
        height: 80px;
    }
    .icon-box img, .icon-box-contato img {
        width: 40px;
        height: 40px;
    }
    
    .contato-info li, .compromissos-list li {
        gap: 15px;
    }

    .item-text h4, .contato-info h4 {
        font-size: 22px;
    }
    .item-text p, .contato-info p {
        font-size: 16px;
    }
}

.gallery-grid img {
    transition: transform 0.4s ease, box-shadow 0.4s ease;
}

.gallery-grid img:hover {
    transform: scale(1.05);
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
}

.gallery-grid img.gallery-logo {
    border: none;
    box-shadow: none;
}
.gallery-grid img.gallery-logo:hover {
    transform: none;
    box-shadow: none;
}

footer .footer-col ul a:hover {
    color: var(--cor-primaria);
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.hero-text h1 {
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
}
.hero-text .divider {
    animation: fadeInUp 0.8s ease-out 0.4s backwards;
}
.hero-text p {
    animation: fadeInUp 0.8s ease-out 0.6s backwards;
}
.hero-image {
    animation: fadeInUp 0.8s ease-out 0.8s backwards;
}

.popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
}

.popup-overlay.show {
    display: flex;
}

.popup-modal {
    background: var(--cor-fundo);
    padding: 40px;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0px 5px 30px rgba(0,0,0,0.2);
    max-width: 500px;
    margin: 20px;
}

.popup-modal h3 {
    font-size: 40px;
    color: var(--cor-texto);
    margin-bottom: 15px;
}

.popup-modal p {
    font-size: 18px;
    color: var(--cor-texto-claro);
    margin-bottom: 30px;
}

.popup-modal .btn-primary {
    font-size: 24px;
    padding: 15px 40px;
}

@media (max-width: 768px) {
    header nav {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background-color: var(--cor-fundo);
        border-bottom: 1px solid #EAEAEA;
        padding: 20px;
        z-index: -1;
    }

    header nav.nav-active {
        display: block;
    }

    header nav ul {
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }
}

.btn-primary:active,
.btn-submit:active,
.hamburger-menu:active,
header nav a:active {
    transform: scale(0.96); 
    opacity: 0.8; 
}

.social-icons a:active {
    transform: scale(0.9);
}

.popup-modal .btn-primary:active {
    transform: scale(0.96);
}
